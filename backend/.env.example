# Application Configuration
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/banh_ngot_pro"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
REFRESH_TOKEN_SECRET="your-super-secret-refresh-token-key-change-in-production"

# Encryption Key (32-byte hex for AES-256)
ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# VNPay Configuration
VNPAY_API_URL="https://sandbox.vnpayment.vn/paymentv2/vpcpay.html"
VNPAY_RETURN_URL="http://localhost:3000/payment/vnpay-return"
VNPAY_TMNCODE="YOUR_VNPAY_TMNCODE"
VNPAY_HASHSECRET="YOUR_VNPAY_HASHSECRET"
VNPAY_MERCHANT="YOUR_VNPAY_MERCHANT"

# MoMo Configuration
MOMO_PARTNER_CODE="YOUR_MOMO_PARTNER_CODE"
MOMO_ACCESS_KEY="YOUR_MOMO_ACCESS_KEY"
MOMO_SECRET_KEY="YOUR_MOMO_SECRET_KEY"
MOMO_API_ENDPOINT="https://test-payment.momo.vn/v2/gateway/api/create"
MOMO_IPN_URL="http://localhost:5000/api/payments/momo-ipn"
MOMO_REDIRECT_URL="http://localhost:3000/payment/momo-return"

# ZaloPay Configuration
ZALOPAY_APP_ID="YOUR_ZALOPAY_APP_ID"
ZALOPAY_KEY1="YOUR_ZALOPAY_KEY1"
ZALOPAY_KEY2="YOUR_ZALOPAY_KEY2"
ZALOPAY_RETURN_URL="http://localhost:3000/payment/zalopay-return"
ZALOPAY_API_ENDPOINT="https://sandbox.zalopay.vn/v0"
API_BASE_URL="http://localhost:5000"

# Ahamove Configuration
AHAMOVE_PARTNER_ID="YOUR_AHAMOVE_PARTNER_ID"
AHAMOVE_API_KEY="YOUR_AHAMOVE_API_KEY"
AHAMOVE_BASE_URL="https://staging-express-api.ahamove.com"

# GrabExpress Configuration
GRABEXPRESS_CLIENT_ID="YOUR_GRABEXPRESS_CLIENT_ID"
GRABEXPRESS_CLIENT_SECRET="YOUR_GRABEXPRESS_CLIENT_SECRET"
GRABEXPRESS_BASE_URL="https://express-sandbox.grab.com"

# Security Headers
SECURE_SSL=true
TRUST_PROXY=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=150000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET="your-session-secret-change-in-production"
SESSION_COOKIE_NAME="bn_session"
SESSION_COOKIE_MAX_AGE=1800000 # 30 minutes

# Admin Panel Security
ADMIN_PANEL_PATH="/bakery-internal-portal-88"  # Change default admin path
ADMIN_INACTIVITY_TIMEOUT=1800000  # 30 minutes in milliseconds

# SMS Service for OTP (Vietnamese providers)
VIETNAMESE_SMS_API_KEY="your-vietnamese-sms-api-key"
SMS_SERVICE_PROVIDER="S2S_VIETNAM"  # Or other Vietnamese SMS providers

# Logging
LOG_LEVEL="info"
AUDIT_LOG_RETENTION_DAYS=90

# Data residency (for compliance with Vietnamese cybersecurity law)
DATA_RESIDENCY_REGION="sgp1"  # Singapore region for low latency in Vietnam
BACKUP_LOCATION="aws_s3_sg"   # AWS S3 Singapore for data residency compliance